    <script type="text/javascript">
        function show(){ 
            var currentHeight = document.getElementById("link").style.height;
            var currentContent = document.getElementById("menu-bnt").innerHTML;
            
            if (currentHeight == '0px' && currentContent == "=") {
                document.getElementById("link").style.height = "310px";
                document.getElementById("menu-bnt").innerHTML = "X";   
            }else{
                document.getElementById("link").style.height = "0px";
                document.getElementById("menu-bnt").innerHTML = "="; 
            }
        }
    </script>
